<div class="container">
  <h1>My Tasks</h1>
  <ul class="task-list">
    <% @tasks.each do |task| %>
      <li>
        <% if task.completed %>
          <i class="far fa-check-square"></i>
        <% else %>
          <i class="far fa-square"></i>
        <% end %>
        <%= task.title %>
      </li>
    <% end %>
  </ul>
</div>
